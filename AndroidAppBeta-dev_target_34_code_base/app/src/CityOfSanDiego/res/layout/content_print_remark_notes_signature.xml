<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layRemarksPrint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_2dp"
        android:layout_marginTop="@dimen/_2dp"
        android:visibility="visible"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_comments_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/roboto_black"
            android:text="Comments"
            android:visibility="visible"
            android:textColor="@color/black"
            android:textSize="@dimen/print_title" />

         <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rectangle_shape_border_grey_ppa_san_diego">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclercommentes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_marginTop="@dimen/_2dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/content_double_text_print" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_1dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/roboto_light"
                android:text="Remark: "
                android:textColor="@color/light_grey_100"
                android:textSize="@dimen/print_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRemarkValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:focusable="true"
                android:layout_gravity="center"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/roboto_light"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text=""
                android:padding="@dimen/_0dp"
                android:textColor="@color/black_heading"
                android:textSize="@dimen/print_label"
                tools:ignore="RelativeOverlap" />

        </androidx.appcompat.widget.LinearLayoutCompat>

             <androidx.appcompat.widget.LinearLayoutCompat
                 android:id="@+id/ll_signature"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:visibility="gone">

             <androidx.appcompat.widget.AppCompatTextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="left"
                 android:layout_weight="1"
                 android:fontFamily="@font/roboto_light"
                 android:text="signature"
                 android:visibility="visible"
                 android:textColor="@color/light_grey_100"
                 android:textSize="@dimen/print_title" />

             <androidx.appcompat.widget.AppCompatImageView
                 android:id="@+id/imgSignature_print"
                 android:layout_width="@dimen/_150dp"
                 android:layout_height="@dimen/_35dp"
                 android:scaleType="fitStart"
                 android:layout_gravity="left"
                 android:visibility="visible"
                 android:layout_marginHorizontal="@dimen/_16dp"
                 android:src="@drawable/signature_pen"
                 android:adjustViewBounds="true"
                 android:layout_marginBottom="@dimen/_50dp"/>

             </androidx.appcompat.widget.LinearLayoutCompat>

         </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_1dp"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appctextviewWarningLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/print_label_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appctextviewWarningValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:text=""
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="@dimen/print_label_10"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_footer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_1dp"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appctextviewFooter3Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/print_label_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appctextviewFooter3Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:text=""
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_4dp"
            android:textSize="@dimen/print_label_10"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>