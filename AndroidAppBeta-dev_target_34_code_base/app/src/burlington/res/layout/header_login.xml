<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_header"
    android:layout_width="match_parent"
    android:background="@color/bg_semi_white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@drawable/bg_login_header"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_45dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_bg_app_icon"
            android:padding="@dimen/_8dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_app_splash" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_cmp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_16dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="@string/scr_lbl_park_loyalty"
            android:textColor="@color/black"
            android:visibility="visible"
            android:textSize="@dimen/_18sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_3dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="@string/scr_lbl_enforcement"
            android:visibility="invisible"
            android:textColor="@color/pastel_orange"
            android:textSize="@dimen/_18sp" />

    </LinearLayout>

</RelativeLayout>