<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBarcodePrint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_1dp"
            android:visibility="gone"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llBarcodePrint"
            android:layout_width="@dimen/_112dp"
            android:layout_height="@dimen/_34dp"
            android:layout_marginTop="@dimen/_1dp"
            android:layout_marginBottom="@dimen/_1dp"
            android:visibility="gone"
            android:background="@drawable/rectangle_shape_border_grey"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_qr_bottomview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="2">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_qrcode_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_print_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:visibility="visible"
                    android:layout_marginTop="-8dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_print_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_black"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:textSize="@dimen/print_label_10"
                    android:text=""
                    android:textAlignment="center"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_lprImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10dp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_qr_code_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="-8dp"
            android:layout_marginHorizontal="@dimen/_6dp"
            android:fontFamily="@font/roboto_regular"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/print_label_10"
            android:visibility="gone"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>