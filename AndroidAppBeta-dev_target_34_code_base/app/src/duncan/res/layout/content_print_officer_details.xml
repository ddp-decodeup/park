<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_122dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layOfficerDetailsPrint"
        style="@style/TextView_print_linear_second_top">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_officer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/print_layout_data_font"
            android:text="@string/scr_lbl_officer_details"
            android:textColor="@color/black"
            android:textSize="@dimen/print_title" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_shape_border_grey"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_violation_bottomview"
                android:layout_width="@dimen/_205dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="@dimen/_3dp"
                android:fontFamily="@font/print_layout_data_font"
                android:text="@string/scr_lbl_ofc_print"
                android:textColor="@color/_2e2e2e"
                android:textSize="@dimen/print_title_8" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerOfficer"
                    android:layout_width="@dimen/_180dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/_1dp"
                    android:background="@drawable/rectangle_shape_border_grey"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/content_double_text_print" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_text_semibold"
                        android:text="signature"
                        android:textColor="@color/light_grey_100"
                        android:textSize="@dimen/print_label_7"
                        android:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgSignature_print"
                        android:layout_width="@dimen/_150dp"
                        android:layout_height="@dimen/_22dp"
                        android:layout_gravity="left"
                        android:layout_marginHorizontal="@dimen/_1dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitStart"
                        android:src="@drawable/signature_pen"
                        android:visibility="visible" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>