<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layVoilationDetailsPrint"
        style="@style/TextView_print_linear_second_top"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_violation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/roboto_black"
            android:text="Violation"
            android:textColor="@color/black"
            android:textSize="@dimen/print_title" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_shape_border_grey"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViolation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_54dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_1dp"
                android:layout_marginTop="@dimen/_2dp"
                android:layout_marginBottom="@dimen/_3dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/content_double_text_print" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_violation_bottomview"
                android:layout_width="@dimen/_205dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/_6dp"
                android:layout_marginLeft="@dimen/_3dp"
                android:layout_marginRight="@dimen/_3dp"
                android:layout_marginBottom="@dimen/_3dp"
                android:fontFamily="@font/print_layout_data_font"
                android:text="@string/scr_lbl_violation_print"
                android:textColor="@color/_2e2e2e"
                android:textSize="@dimen/print_title_8"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>