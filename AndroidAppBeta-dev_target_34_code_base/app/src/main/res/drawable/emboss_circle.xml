<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Top-left highlight (light) -->
    <item android:top="0dp" android:left="0dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFFFF"/>
            <size android:width="56dp" android:height="56dp" />
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp"/>
        </shape>
    </item>

    <!-- Slight smaller inner radial-ish by using inset -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFFFF"/>
        </shape>
    </item>

    <!-- Subtle darker shadow at bottom-right using another oval (offset with insets) -->
    <item android:top="4dp" android:left="4dp">
        <shape android:shape="oval">
            <solid android:color="#0A000000"/>
            <size android:width="56dp" android:height="56dp" />
        </shape>
    </item>
</layer-list>
