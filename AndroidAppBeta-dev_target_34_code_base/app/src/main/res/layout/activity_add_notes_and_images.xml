<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_semi_white"
    android:fitsSystemWindows="true"
    tools:context=".ui.dashboard.DashboardActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_semi_white">

       <androidx.core.widget.NestedScrollView
           android:fillViewport="true"
           android:fitsSystemWindows="true"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/bg_semi_white">

               <include layout="@layout/content_add_note_images" android:id="@+id/layoutContentAddNoteImages" />

               <!-- <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_update"
                    style="@style/Button_shape_without_fill"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/_16dp"
                    android:layout_marginRight="@dimen/_16dp"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:padding="@dimen/_10dp"
                    android:text="@string/scr_btn_refresh"
                    android:textAllCaps="false" />
        -->
           </RelativeLayout>

       </androidx.core.widget.NestedScrollView>

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:id="@+id/right_drawer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:choiceMode="singleChoice"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp">

            <include layout="@layout/content_options_layout" />

        </FrameLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>