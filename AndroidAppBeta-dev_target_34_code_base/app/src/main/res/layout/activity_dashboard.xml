<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_semi_white"
    tools:context=".ui.dashboard.DashboardActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_semi_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_semi_white">

            <include layout="@layout/content_dashboard" android:id="@+id/layoutContentDashboard"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnScanSticker"
                style="@style/Button_shape_blue"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:layout_marginVertical="@dimen/_16dp"
                android:padding="@dimen/_10dp"
                android:text="@string/btn_text_scan_sticker"
                android:textAllCaps="false"
                android:layout_above="@id/btnCheckSetup"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCheckSetup"
                style="@style/Button_shape_blue"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_16dp"
                android:layout_marginRight="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:text="@string/scr_btn_check_setup"
                android:textAllCaps="false" />

        </RelativeLayout>


        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:id="@+id/right_drawer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:choiceMode="singleChoice"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp">

            <include layout="@layout/content_options_layout" />

        </FrameLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>