<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_semi_white"
    android:focusableInTouchMode="true"
    android:focusable="true"
   >

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/header_toolbar_black" />

        <include layout="@layout/content_forgot_password" android:id="@+id/layoutContentForgotPassword" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_16dp"
            android:layout_marginRight="@dimen/_16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="2"
            android:layout_marginBottom="@dimen/_20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            style="@style/Button_shape_blue_with_font"
            android:text="@string/scr_btn_continue"
            android:layout_marginRight="@dimen/_7dp"
            android:textAllCaps="false" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_7dp"
                android:layout_width="wrap_content"
                style="@style/Button_shape_without_fill_with_height"
                android:text="@string/scr_btn_cancel"
                android:textAllCaps="false" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>