<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_mainlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.FullScreen">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:collapsedTitleTextAppearance="@style/Editext.Theme"
        app:contentScrim="@color/white"
        app:expandedTitleGravity="bottom"
        app:expandedTitleMarginBottom="@dimen/_16dp"
        app:expandedTitleMarginEnd="6dp"
        app:expandedTitleMarginStart="@dimen/_16dp"
        app:expandedTitleTextAppearance="@style/Editext.Theme"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="@drawable/bg_welcome_header"
            app:layout_collapseMode="parallax" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:layout_collapseMode="pin"
            app:navigationIcon="@drawable/ic_back_white"
            app:popupTheme="@style/AppTheme.White"
            app:titleTextAppearance="@style/Editext.Theme"
            app:titleTextColor="@color/black" >

        <!--<androidx.appcompat.widget.AppCompatTextView
            android:layout_marginRight="@dimen/_30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_semi_bold"
            android:gravity="right"
            android:text="@string/SCL_LBL_APPLICATION"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp" />-->

        </androidx.appcompat.widget.Toolbar>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_menu"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_collapseMode="pin" />


    </com.google.android.material.appbar.CollapsingToolbarLayout>

</com.google.android.material.appbar.AppBarLayout>
