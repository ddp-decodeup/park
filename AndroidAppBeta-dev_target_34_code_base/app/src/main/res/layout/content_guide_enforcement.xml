<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/btnCheckSetup"
    android:layout_below="@+id/toolbar_layout"
    android:background="@color/bg_semi_white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/dashboard_header" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_54dp"
            android:layout_marginRight="@dimen/_16dp"
            android:layout_marginLeft="@dimen/_16dp"
            android:scrollbars = "vertical"
            app:iconifiedByDefault="false"
            android:background="@drawable/round_corner_shape_border_grey_fill_gray"
            android:layoutDirection="rtl" />

        <!--TAG Text filed-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_textStatus"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_54dp"
            android:visibility="visible"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:layout_marginTop="@dimen/_6dp"
            app:boxCornerRadiusBottomEnd="@dimen/_10dp"
            app:boxCornerRadiusBottomStart="@dimen/_10dp"
            app:boxCornerRadiusTopEnd="@dimen/_10dp"
            app:boxCornerRadiusTopStart="@dimen/_10dp"
            app:hintEnabled="false"
            app:hintTextAppearance="@style/Editext.Theme"
            app:placeholderTextAppearance="@style/Editext.Theme">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/etStatus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_54dp"
                android:dropDownHeight="300dp"
                android:background="@drawable/round_corner_shape_without_fill_thin_grey"
                android:clickable="true"
                android:drawableRight="@drawable/ic_dropdown_arrow"
                android:focusable="true"
                android:editable="true"
                android:imeOptions="actionDone"
                android:focusableInTouchMode="true"
                android:inputType="textAutoComplete"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/scr_lbl_select"
                android:padding="@dimen/_10dp"
                android:textColor="@color/black_heading"
                android:textColorHint="@color/black_heading"
                android:textSize="@dimen/_14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_enforecemt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10dp"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            android:layout_marginBottom="@dimen/_16dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:nestedScrollingEnabled="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/row_items_guide_enforcement"
            android:visibility="visible"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_nodata"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_16dp"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:text="@string/err_msg_there_is_no_data_found"
            android:textColor="@color/black_heading"
            android:textSize="@dimen/_20sp"
            android:drawablePadding="@dimen/_5dp"
            android:drawableLeft="@drawable/ic_baseline_error_outline_24"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>