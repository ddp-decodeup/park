<?xml version="1.0" encoding="utf-8"?><androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_below="@+id/toolbar_layout"    android:background="@color/bg_semi_white"    android:orientation="vertical">    <androidx.appcompat.widget.LinearLayoutCompat        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="@dimen/_16dp"        android:layout_marginTop="@dimen/_14dp"        android:layout_marginRight="@dimen/_16dp"        android:orientation="horizontal"        android:weightSum="2">        <androidx.appcompat.widget.AppCompatTextView            android:id="@+id/tvEnforcementTitle"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:layout_weight="1"            android:fontFamily="@font/sf_pro_text_semibold"            android:text="@string/scr_lbl_citation_details"            android:textColor="@color/black_tv"            android:textSize="@dimen/_16sp"            android:accessibilityHeading="true" />        <androidx.appcompat.widget.LinearLayoutCompat            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_weight="1"            android:gravity="right">            <androidx.appcompat.widget.AppCompatImageView                android:id="@+id/ivCameraBottom"                android:layout_width="@dimen/_50dp"                android:layout_height="@dimen/_50dp"                android:src="@drawable/ic_camera_new"                android:visibility="visible"                android:contentDescription="@string/ada_content_description_camera" />        </androidx.appcompat.widget.LinearLayoutCompat>    </androidx.appcompat.widget.LinearLayoutCompat>    <include layout="@layout/content_banner" android:id="@+id/layoutContentBanner"/>    <androidx.appcompat.widget.LinearLayoutCompat        android:id="@+id/ll_citation_details"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical">    </androidx.appcompat.widget.LinearLayoutCompat>    <!--TAG Image View - signature-->    <androidx.appcompat.widget.AppCompatImageView        android:id="@+id/imgSignature"        android:layout_marginTop="@dimen/_16dp"        android:layout_width="@dimen/_150dp"        android:layout_height="@dimen/_45dp"        android:scaleType="fitStart"        android:layout_gravity="left"        android:visibility="gone"        android:layout_marginHorizontal="@dimen/_16dp"        android:src="@drawable/signature_pen"        android:adjustViewBounds="true"/>    <!--TAG Text field - name-->    <androidx.appcompat.widget.AppCompatTextView        android:id="@+id/txtPersonSignature"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginHorizontal="@dimen/_16dp"        android:layout_marginTop="@dimen/_6dp"        android:layout_gravity="center_vertical"        android:text="Person Signature"        android:visibility="gone"        android:textSize="@dimen/_14sp"        android:textColor="@color/black_sub_heading"        android:accessibilityHeading="true"        />    <!--TAG Button-->    <androidx.appcompat.widget.AppCompatButton        android:id="@+id/btnPreview"        style="@style/Button_shape_blue"        android:layout_marginHorizontal="@dimen/_16dp"        android:layout_marginTop="@dimen/_30dp"        android:layout_marginBottom="@dimen/_16dp"        android:text="@string/scr_btn_preview"        android:onClick="onClick"        android:textAllCaps="false" />    <androidx.appcompat.widget.AppCompatButton        android:id="@+id/btnClear"        style="@style/Button_shape_blue"        android:layout_marginHorizontal="@dimen/_16dp"        android:layout_marginTop="@dimen/_10dp"        android:layout_marginBottom="@dimen/_16dp"        android:text="@string/scr_btn_clear"        android:onClick="onClick"        android:textAllCaps="false"        android:visibility="gone"/></androidx.appcompat.widget.LinearLayoutCompat>