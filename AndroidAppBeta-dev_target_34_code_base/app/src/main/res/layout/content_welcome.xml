<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/bg_semi_white"
    android:layout_below="@+id/toolbar_layout">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:background="@color/white">

        <include layout="@layout/content_collapse_welcome_header" android:id="@+id/layoutContentCollapseWelcomeHeader" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/content_empty_activity_layout" android:id="@+id/layoutContentEmptyActivityLayout"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLoginDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/_26dp"
                    android:visibility="gone"
                    android:fontFamily="@font/sf_pro_text_semibold"
                    android:text="@string/scr_lbl_login_details"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:textColor="@color/black_heading"
                    android:textSize="@dimen/_20sp" />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPreLogin"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:background="@color/bg_semi_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16dp"
                        android:elevation="@dimen/_6dp"
                        android:layout_marginRight="8dp"
                        app:cardCornerRadius="@dimen/_15dp"
                        app:cardElevation="@dimen/_0dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_corner_shape_with_white_fill_border_grey"
                            android:paddingHorizontal="@dimen/_12dp"
                            android:paddingVertical="@dimen/_22dp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:text="@string/scr_lbl_previous_login"
                                android:textColor="@color/light_grey_100"
                                android:textSize="@dimen/_14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvPreviousLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:text=""
                                android:textColor="@color/black_tv"
                                android:textSize="@dimen/_14sp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardCurLogin"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16dp"
                        app:cardCornerRadius="@dimen/_15dp"
                        android:elevation="@dimen/_6dp"
                        android:layout_marginLeft="8dp"
                        app:cardElevation="@dimen/_0dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingHorizontal="@dimen/_12dp"
                            android:paddingVertical="@dimen/_22dp"
                            android:background="@color/pastel_orange"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:text="@string/scr_lbl_current_login"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvCurrentLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvOfficerDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/_26dp"
                    android:visibility="gone"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:fontFamily="@font/sf_pro_text_semibold"
                    android:text="@string/scr_lbl_officer_details"
                    android:textColor="@color/black_heading"
                    android:textSize="@dimen/_20sp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layMainOfficer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    >

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_16dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/layOfficerId"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:text="@string/scr_lbl_officer_id"
                                android:textColor="@color/light_grey_100"
                                android:textSize="@dimen/_14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvOfficerId"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50dp"
                                android:gravity="center|left"
                                android:layout_marginTop="@dimen/_7dp"
                                android:layout_marginRight="@dimen/_10dp"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:text=""
                                android:paddingHorizontal="@dimen/_16dp"
                                android:paddingVertical="@dimen/_6dp"
                                android:background="@drawable/round_corner_shape_without_fill_gray"
                                android:textColor="@color/black_sub_heading"
                                android:textSize="@dimen/_14sp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/layBadgeId"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:text="@string/scr_lbl_badge_id"
                                android:textColor="@color/light_grey_100"
                                android:textSize="@dimen/_14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvBadgeId"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50dp"
                                android:gravity="center|left"
                                android:layout_marginTop="@dimen/_7dp"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:text=""
                                android:paddingHorizontal="@dimen/_16dp"
                                android:paddingVertical="@dimen/_6dp"
                                android:background="@drawable/round_corner_shape_without_fill_gray"
                                android:textColor="@color/black_sub_heading"
                                android:textSize="@dimen/_14sp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layAssetDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAssetDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/_16dp"
                        android:fontFamily="@font/sf_pro_text_semibold"
                        android:text="@string/scr_lbl_asset_details"
                        android:textColor="@color/black_heading"
                        android:textSize="@dimen/_20sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layLocationDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLocationDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/_16dp"
                        android:fontFamily="@font/sf_pro_text_semibold"
                        android:text="@string/scr_lbl_location_details"
                        android:textColor="@color/black_heading"
                        android:textSize="@dimen/_20sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layMainOtherDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:paddingVertical="@dimen/_26dp"
                    android:visibility="gone"
                    android:background="@drawable/round_corner_shape_fill_yellow_border_grey"
                    >

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/layOtherDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvOtherDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="@dimen/_16dp"
                            android:fontFamily="@font/sf_pro_text_semibold"
                            android:text="@string/scr_lbl_other_details"
                            android:textColor="@color/black_heading"
                            android:textSize="@dimen/_20sp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivCamera"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:src="@drawable/ic_camera_new"
                            android:visibility="visible"
                            android:layout_alignParentRight="true"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/scanCount"
                                android:layout_toLeftOf="@+id/ivCamera"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sf_pro_text_semibold"
                                android:text=""
                                android:visibility="gone"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black_heading"
                                android:textSize="@dimen/_14sp" />
                        </RelativeLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <include
                        android:id="@+id/layoutContentBanner"
                        layout="@layout/content_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_30dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDoneActivity"
                        android:layout_width="85dp"
                        android:layout_height="@dimen/_45dp"
                        android:layout_marginTop="@dimen/_16dp"
                        android:layout_gravity="right"
                        style="@style/Button_shape_without_fill"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/_16dp"
                        android:padding="@dimen/_6dp"
                        android:visibility="gone"
                        android:text="@string/scr_btn_save_small_letter"
                        android:textAllCaps="false" />

                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_qrcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_marginTop="@dimen/_14dp"
                    android:background="@drawable/round_corner_shape_fill_light_green_border_grey"
                    android:visibility="gone">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_14dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/sf_pro_text_semibold"
                            android:text="@string/scr_lbl_qr_code_inventory"
                            android:textColor="@color/black_tv"
                            android:textSize="@dimen/_20sp"
                            android:accessibilityHeading="true"/>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivQrscanner"
                                android:layout_width="@dimen/_40dp"
                                android:layout_height="@dimen/_40dp"
                                android:src="@drawable/baseline_qr_code_scanner_24"
                                android:visibility="visible"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <include
                        android:id="@+id/layoutContentQrCodeInventoryBanner"
                        layout="@layout/content_qr_code_inventory_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_15dp"/>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <!--TAG Image View - signature-->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgSignature"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_width="@dimen/_150dp"
                    android:layout_height="@dimen/_58dp"
                    android:scaleType="fitStart"
                    android:layout_gravity="left"
                    android:visibility="gone"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:src="@drawable/signature_pen"
                    android:adjustViewBounds="true"/>

                <!--TAG Text field - name-->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtPersonSignature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6dp"
                    android:visibility="gone"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_gravity="center_vertical"
                    android:text="Person Signature"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/black_sub_heading"
                    android:accessibilityHeading="true"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnScanSticker"
                    style="@style/Button_shape_blue"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginBottom="@dimen/negative_6_dp"
                    android:padding="@dimen/_10dp"
                    android:text="@string/btn_text_scan_sticker"
                    android:textAllCaps="false"
                    android:visibility="gone"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:visibility="gone"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_marginTop="@dimen/_26dp"
                    android:layout_marginBottom="@dimen/_22dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDone"
                        android:layout_weight="1"
                        style="@style/Button_shape_without_fill"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/_10dp"
                        android:padding="@dimen/_10dp"
                        android:text="@string/scr_btn_save_small_letter"
                        android:textAllCaps="false" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnScan"
                        android:layout_weight="1"
                        style="@style/Button_shape_blue"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:padding="@dimen/_10dp"
                        android:text="@string/scr_btn_scan"
                        android:textAllCaps="false" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layBottomKeyboard"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:visibility="gone"
                    />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.appcompat.widget.LinearLayoutCompat>