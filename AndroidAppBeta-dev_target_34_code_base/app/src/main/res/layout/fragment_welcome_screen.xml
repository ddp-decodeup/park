<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/layoutContentEmptyActivityLayout"
                layout="@layout/content_empty_activity_layout" tools:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvWelcomeBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/screen_margin"
                android:layout_marginTop="@dimen/screen_margin"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/scr_lbl_welcome_back"
                android:textColor="@color/black_heading"
                android:textSize="@dimen/_14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHeaderUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/screen_margin"
                style="@style/CustomTextViewHeaderBlack"
                tools:text="S Breyer" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLoginDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:layout_marginTop="@dimen/_26dp"
                style="@style/CustomTextViewSegmentHeaderBlack"
                android:text="@string/scr_lbl_login_details"
                android:visibility="gone"
                tools:visibility="visible"/>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPreLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_margin"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:layout_marginStart="@dimen/screen_margin"
                    android:layout_weight="1"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:cardCornerRadius="@dimen/card_view_corner_radius"
                    app:cardElevation="@dimen/card_view_elevation">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/screen_padding"
                        android:paddingVertical="@dimen/screen_padding">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:text="@string/scr_lbl_previous_login"
                            android:textColor="@color/light_grey_100"
                            android:textSize="@dimen/text_size_small" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPreviousLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/_8dp"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:textColor="@color/black_tv"
                            android:textSize="@dimen/text_size_small"
                            tools:text="10-22-25 07:58 AM"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="@dimen/screen_margin"
                    android:layout_height="@dimen/_0dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCurLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_margin"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/screen_margin"
                    android:layout_weight="1"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:cardCornerRadius="@dimen/card_view_corner_radius"
                    app:cardElevation="@dimen/card_view_elevation">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/pastel_orange"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/screen_padding"
                        android:paddingVertical="@dimen/screen_padding">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:text="@string/scr_lbl_current_login"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCurrentLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/_8dp"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small"
                            tools:text="10-22-25 07:58 AM"/>


                    </androidx.appcompat.widget.LinearLayoutCompat>
                </com.google.android.material.card.MaterialCardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOfficerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                style="@style/CustomTextViewSegmentHeaderBlack"
                android:layout_marginHorizontal="@dimen/screen_margin"
                android:layout_marginTop="@dimen/_26dp"
                android:text="@string/scr_lbl_officer_details"
                android:visibility="gone"
                tools:visibility="visible"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layMainOfficer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/screen_margin"
                    android:layout_marginTop="@dimen/screen_margin"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_weight="1"
                        android:id="@+id/inputOfficerId"
                        style="@style/CustomTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/scr_lbl_officer_id">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etOfficerId"
                            style="@style/CustomTextInputEditText"
                            android:layout_width="match_parent"
                            android:maxLength="20"
                            android:enabled="false"
                            tools:text="5410dea3"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                    android:layout_width="@dimen/screen_margin"
                    android:layout_height="@dimen/_0dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_weight="1"
                        android:id="@+id/inputBadgeId"
                        style="@style/CustomTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/scr_lbl_badge_id">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBadgeId"
                            style="@style/CustomTextInputEditText"
                            android:layout_width="match_parent"
                            android:maxLength="20"
                            android:enabled="false"
                            tools:text="104"/>

                    </com.google.android.material.textfield.TextInputLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layAssetDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAssetDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="@dimen/screen_margin"
                    android:layout_marginTop="@dimen/_26dp"
                    style="@style/CustomTextViewSegmentHeaderBlack"
                    android:text="@string/scr_lbl_asset_details"
                    android:visibility="gone"
                    tools:visibility="visible"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layLocationDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLocationDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="@dimen/screen_margin"
                    android:layout_marginTop="@dimen/_26dp"
                    style="@style/CustomTextViewSegmentHeaderBlack"
                    android:text="@string/scr_lbl_location_details"
                    android:visibility="gone"
                    tools:visibility="visible"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvMainOtherDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/screen_margin"
                android:layout_marginTop="@dimen/_26dp"
                android:layout_marginBottom="@dimen/_8dp"
                app:cardCornerRadius="@dimen/card_view_corner_radius"
                app:cardElevation="@dimen/card_view_elevation"
                android:visibility="gone"
                tools:visibility="visible">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_yellow_5"
                    android:paddingVertical="@dimen/screen_padding"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/layOtherDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvOtherDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="start"
                                android:layout_marginHorizontal="@dimen/screen_margin"
                                style="@style/CustomTextViewSegmentHeaderBlack"
                                android:text="@string/scr_lbl_other_details" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/scanCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/sf_pro_text_semibold"
                                android:layout_gravity="center"
                                android:textColor="@color/black_heading"
                                android:textSize="@dimen/_14sp"
                                android:visibility="gone"
                                tools:visibility="visible"
                                tools:text="123"/>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivCamera"
                                android:layout_width="@dimen/_50dp"
                                android:layout_height="@dimen/_50dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_camera_new"
                                android:layout_marginEnd="@dimen/_10dp"
                                android:visibility="visible"
                                tools:visibility="visible"/>


                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <include
                        android:id="@+id/layoutContentBanner"
                        layout="@layout/content_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_30dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDoneActivity"
                        style="@style/Button_shape_without_fill"
                        android:layout_width="85dp"
                        android:layout_height="@dimen/_45dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_16dp"
                        android:layout_marginRight="@dimen/_16dp"
                        android:padding="@dimen/_6dp"
                        android:text="@string/scr_btn_save_small_letter"
                        android:textAllCaps="false"
                        android:visibility="gone" />

                </androidx.appcompat.widget.LinearLayoutCompat>



            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvQrCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/screen_margin"
                android:layout_marginTop="@dimen/_14dp"
                android:layout_marginBottom="@dimen/_8dp"
                app:cardCornerRadius="@dimen/card_view_corner_radius"
                app:cardElevation="@dimen/card_view_elevation"
                android:visibility="gone">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_green_5"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginTop="@dimen/_14dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:accessibilityHeading="true"
                            style="@style/CustomTextViewSegmentHeaderBlack"
                            android:text="@string/scr_lbl_qr_code_inventory" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivQrscanner"
                                android:layout_width="@dimen/_40dp"
                                android:layout_height="@dimen/_40dp"
                                android:src="@drawable/baseline_qr_code_scanner_24"
                                android:visibility="visible" />
                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <include
                        android:id="@+id/layoutContentQrCodeInventoryBanner"
                        layout="@layout/content_qr_code_inventory_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_15dp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

            </com.google.android.material.card.MaterialCardView>



            <!--TAG Image View - signature-->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgSignature"
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_58dp"
                android:layout_gravity="left"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:layout_marginTop="@dimen/_20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/signature_pen"
                android:visibility="gone" />

            <!--TAG Text field - name-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtPersonSignature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:layout_marginTop="@dimen/_6dp"
                android:accessibilityHeading="true"
                android:text="Person Signature"
                android:textColor="@color/black_sub_heading"
                android:textSize="@dimen/_14sp"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnScanSticker"
                style="@style/CustomPositiveButtonRegular"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_marginBottom="@dimen/negative_6_dp"
                android:padding="@dimen/_10dp"
                android:text="@string/btn_text_scan_sticker"
                android:textAllCaps="false"
                android:visibility="gone"
                tools:visibility="visible"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:layout_marginTop="@dimen/_26dp"
                android:layout_marginBottom="@dimen/_22dp"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDone"
                    style="@style/CustomNegativeButtonRegular"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/screen_margin_half"
                    android:layout_weight="1"
                    android:padding="@dimen/_10dp"
                    android:text="@string/scr_btn_save_small_letter"
                    android:textAllCaps="false" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScan"
                    style="@style/CustomPositiveButtonRegular"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/screen_margin_half"
                    android:layout_weight="1"
                    android:padding="@dimen/_10dp"
                    android:text="@string/scr_btn_scan"
                    android:textAllCaps="false" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>