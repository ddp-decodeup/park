<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_grey_100"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="@dimen/_6dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10dp"
                android:id="@+id/zebraHeader"
                android:padding="@dimen/_10dp"
                android:background="@android:color/white"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:elevation="@dimen/_10dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="false"
                    android:layout_centerVertical="true"
                    android:id="@+id/zebraLogo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/zebraLogo"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="zebra_technologies_corp"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="zebra_address_line_1"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/launchpad_link"
                        android:text="zebra_address_line_2"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"/>


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/deep_blue"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/ipDnsRadio"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:textSize="18dp"
                        android:text="IP/DNS"
                        android:checked="true" />
                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:id="@+id/bluetoothRadio"
                        android:textSize="18dp"
                        android:text="Bluetooth (R)" />
                </RadioGroup>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ipAddressText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Ip Address:"
                        android:textSize="18.0sp"
                        android:layout_weight="1" />
                    <EditText
                        android:id="@+id/ipAddressInput"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textNoSuggestions|text"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp">
                    <TextView
                        android:id="@+id/portText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18.0sp"
                        android:text="Port:"
                        android:layout_weight="1" />
                    <EditText
                        android:id="@+id/portInput"
                        android:text="9100"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="5"
                        android:inputType="number"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_10dp">
                    <TextView
                        android:id="@+id/macAddressText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18.0sp"
                        android:text="MAC Address:"
                        android:layout_weight="1" />
                    <EditText
                        android:id="@+id/macInput"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="textNoSuggestions|text"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:elevation="@dimen/_10dp">

                <TextView
                    android:id="@+id/rotationText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:text="Choose Rotation:"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/rotationSpinner"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:layout_width="fill_parent"
                    android:spinnerMode="dropdown"
                    style="@style/SpinnerTheme"
                    android:layout_height="40dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:elevation="@dimen/_10dp">

                <Spinner
                    android:id="@+id/imageSelection"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:layout_width="fill_parent"
                    android:spinnerMode="dropdown"
                    style="@style/SpinnerTheme"
                    android:layout_height="40dp" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBox"
                android:text="store_check"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/printerStorePath"
                android:layout_height="wrap_content"
                android:hint="path_hint"
                android:layout_width="fill_parent"
                android:inputType="textNoSuggestions|text"
                android:visibility="invisible" />




        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectedPrinterFragmentContainer"
            android:layout_alignParentTop="true" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/selectedPrinterFragmentContainer">

            <ImageView
                android:layout_width="139dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/_10dp"
                android:id="@+id/zebraFooterLogo"
                android:src="@drawable/common_full_open_on_phone"/>

        </FrameLayout>

    </RelativeLayout>

</ScrollView>








