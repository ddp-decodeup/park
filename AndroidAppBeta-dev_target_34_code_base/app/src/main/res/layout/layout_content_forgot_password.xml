<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/btnContinue"
    android:layout_below="@+id/rl_header"
    android:layout_weight="1"
    android:background="@color/bg_semi_white"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/screen_padding"
    android:paddingTop="@dimen/_26dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputUserId"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_user_id">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserId"
            style="@style/CustomTextInputEditText"
            android:layout_width="match_parent"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            app:errorEnabled="true"
            tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputEmail"
        style="@style/CustomTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_between_input_layouts"
        android:hint="@string/hint_email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            style="@style/CustomTextInputEditText"
            android:layout_width="match_parent"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            app:errorEnabled="true"
            tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

    </com.google.android.material.textfield.TextInputLayout>


</androidx.appcompat.widget.LinearLayoutCompat>