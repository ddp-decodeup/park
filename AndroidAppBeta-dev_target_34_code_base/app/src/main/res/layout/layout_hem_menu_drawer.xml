<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!-- Optional: Drawer header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/_12dp"
        android:paddingStart="@dimen/_24dp"
        android:paddingVertical="@dimen/_24dp">

        <TextView
            android:id="@+id/tvDrawerHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="S Sotomayor" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCloseDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cross" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHemMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        tools:itemCount="15"
        tools:listitem="@layout/item_hem_menu_option" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        style="@style/CustomPositiveButtonRegular"
        android:layout_margin="@dimen/screen_margin"
        android:text="@string/button_text_logout"
        android:textAllCaps="false" />

</LinearLayout>
